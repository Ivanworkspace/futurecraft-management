rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Prenotazioni: chiunque autenticato può leggere (per vedere slot occupati, in forma anonima)
    // Solo l'utente può creare prenotazioni a proprio nome
    // Solo l'utente può eliminare le proprie prenotazioni
    match /bookings/{bookingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'date', 'slotId', 'createdAt']);
      allow update: if false;
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
  }
}
