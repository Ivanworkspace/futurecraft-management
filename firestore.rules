rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: true se l'utente è admin (stessa email usata in config.ts)
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@futurecraftmanagement.com';
    }

    match /bookings/{bookingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.date is string
        && request.resource.data.slotId is string
        && (request.resource.data.userEmail == null || request.resource.data.userEmail == request.auth.token.email);
      allow update, delete: if request.auth != null
        && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Profili clienti (nome, limite incontri): admin può scrivere; ogni utente può scrivere il proprio (per sync da Clienti al login)
    match /userProfiles/{uid} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || request.auth.uid == uid;
    }

    // Config: giorni disabilitati per prenotazioni
    match /config/calendar {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Clienti (email, nome, max incontri) - solo admin scrive, tutti autenticati leggono (per sync al login)
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
